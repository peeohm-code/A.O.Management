{
  "watch": ["server"],
  "ext": "ts,js,json",
  "ignore": [
    "node_modules/**",
    ".git/**",
    "dist/**",
    "build/**",
    "client/**",
    "drizzle/**",
    "*.log"
  ],
  "exec": "node --import tsx server/_core/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "legacyWatch": true
}
